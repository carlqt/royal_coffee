                  = select_tag :size, options_for_select(prod.available_types), class: "size"
              .separator.clear-left
                p.btn-add
                  i.fa.fa-shopping-cart
                  a.order.hidden-sm href="#"  Add to order
                p.btn-details
                  i.fa.fa-list
                  a.hidden-sm href="http://www.jquery2dotnet.com"  More details
              .clearfix
